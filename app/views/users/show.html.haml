%h1 
  = @user.name  
%h2 Details
%p 
  Company:
  = @user.company
%p
  Email:
  = mail_to @user.email
%p
  Contact in Company:
  = @user.referrer

%h2 Permissions
- if current_user.is_admin  
  = form_for @user do |f|
    %p
      = f.label :active
      = f.check_box :active
      &nbsp; 
      = f.label :is_admin
      = f.check_box :is_admin
      &nbsp;
      = f.label :can_hotlink
      = f.check_box :can_hotlink
      &nbsp;
      = f.label :can_home, 'Can change home'
      = f.check_box :can_home
    .actions
      = f.submit 'Save changes', :class => 'button save'
- else
  %ul
    - if @user.active
      %li
        Active User
    - if @user.can_hotlink
      %li
        Can Hotlink:
      
.clear
  
%h2 Groups
- if @user.groups.empty?
  %p
    %em User belongs to no groups
-else
  %ul
    - for group in @user.groups 
      %li
        = link_to group.name, group
      
%h2 Folders
- unless @user.accessible_folders_exc_groups.empty?
  %h3 Assigned to user
  %ul
    - for folder in @user.accessible_folders_exc_groups
      %li 
        =link_to folder.breadcrumbs, folder
- unless @user.groups.empty?
  %h3 Assigned from groups
  %ul
    - @user.groups.each do |group|
      %li
        = group.name
        %ul
          - group.folders.each do |folder|
            %li
              = link_to folder.breadcrumbs, folder
.actions
  = button_to "Delete User", @user, :confirm => 'Are you sure?', :method => :delete, :class => 'button delete' unless params[:action] == 'me'
  = link_to "Change Password", user_password_path, :class => 'button edit'
  - if current_user.is_admin
    = form_tag update_password_path do
      = hidden_field_tag 'email', @user.email
      = submit_tag 'Reset Password', :class => 'button login'
      .clear
.clear