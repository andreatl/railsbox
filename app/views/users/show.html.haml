%h2 User Details
%p
  %strong
    Name:
  = @user.name
%p
  %strong
    Company:
  = @user.company
%p
  %strong
    Email:
  = mail_to @user.email
%p
  %strong
    Contact in Company:
  = @user.referrer
.clear
- if current_user.is_admin
  %h2 Rights  
  = form_for @user do |f|
    %p
      = f.label :active
      = f.check_box :active
      &nbsp; 
      = f.label :is_admin
      = f.check_box :is_admin
      &nbsp;
      = f.label :can_hotlink
      = f.check_box :can_hotlink
      &nbsp;
      = f.label :can_home, 'Can change home'
      = f.check_box :can_home
    .actions
      = f.submit 'Save changes', :class => 'button save'
- else
  %p
    %strong.left
      User is active: 
    - if @user.active
      %span.tick.icon-only
    - else
      %span.cross.icon-only
  .clear
  %p
    %strong.left
      User can hotlink: 
    - if @user.can_hotlink
      %span.tick.icon-only
    - else
      %span.cross.icon-only
  .clear
  %p
    %strong.left
      User can change home: 
    - if @user.can_home
      %span.tick.icon-only
    - else
      %span.cross.icon-only
.clear
= link_to "Change Password", user_password_path, :class => 'button edit' if params[:action] == 'me'
.clear
  
%h2 Groups
- if @user.groups.empty?
  %p
    %em User doesn't belong to any groups
-else
  %ul
    - for group in @user.groups 
      %li
        = link_to group.name, group
      
%h2 Folders
- unless @user.accessible_folders_exc_groups.empty?
  %h3 Assigned to user
  %ul
    - for folder in @user.accessible_folders_exc_groups
      %li 
        =link_to folder.breadcrumbs, folder
- unless @user.groups.empty?
  %h3 Assigned from groups
  %ul
    - @user.groups.each do |group|
      %li
        = group.name
        %ul
          - group.folders.each do |folder|
            %li
              = link_to folder.breadcrumbs, folder
.actions
  = button_to "Delete User", @user, :confirm => 'Are you sure?', :method => :delete, :class => 'button delete' unless params[:action] == 'me'
  - if current_user.is_admin
    = form_tag update_password_path do
      = hidden_field_tag 'email', @user.email
      = submit_tag 'Reset Password', :class => 'button login'
      .clear
.clear