#hotlinkError
  %p
    Please correct the following errors

= form_for @hotlink do |f|
  = f.error_messages
  .field
    = f.hidden_field :asset_id
  .field
    = f.label :days, 'Expires in (days)'
    = f.text_field :days, :size => 3, :value => 1
  .field
    = f.label :password, 'Password: '
    = f.text_field :password, :value => @random_password

  .actions
    = f.submit :class => 'button createLink'