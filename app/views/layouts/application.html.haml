!!!
%html
  %head
    %title Railsbox
    = stylesheet_link_tag 'colorbox', 'screen'
    = javascript_include_tag :defaults
    = yield :page_specific_head
    = csrf_meta_tag
  %body
    #content-holder
      - if current_user
        #top-menu
          %ul#actions-menu
            %li= link_to 'Home', root_url
            - if current_user.is_admin
              %li= link_to 'Admin', admin_panel_url
            %li= link_to 'My details', my_details_url
          #user-bar
            #user-bar-padder
              Logged in as #{current_user.email}
              \ 
              \#{link_to 'Logout', log_out_url}
          / user-bar
        / top-menu
      .clear
        / 
      - flash.each do |name, msg|
        = content_tag :div, msg, :id => "flash_#{name}"
      - end unless params[:controller] == 'sessions'
      #content{:class => "#{yield :contentClass}"}
        = yield