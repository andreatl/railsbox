= form_tag sessions_path do
  %p
    = label_tag :email, 'Email Address:'
    = text_field_tag :email, params[:email], :size => 30
  %p
    = label_tag :password, 'Client Password:'
    = password_field_tag :password, '', :size => 30
  %p
    = submit_tag "Log in", :class => 'button login'
  %p.error
    = flash[:error]
  %p.notice
    = flash[:notice]